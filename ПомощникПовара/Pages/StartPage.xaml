<Page x:Class="ПомощникПовара.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ПомощникПовара.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="400">
            <Button x:Name="btnStart" Click="btnStart_Click" Content="Начать" Margin="5" Height="80" FontSize="30"/>
            <Button x:Name="btnMeals" Click="btnMeals_Click" Content="Блюда" Margin="5" Height="80" FontSize="30"/>
            <Button x:Name="btnExit" Click="btnExit_Click" Content="Закрить" Background="Red" Margin="5" Height="80" FontSize="30"/>
        </StackPanel>
    </Grid>
</Page>
